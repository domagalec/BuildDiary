<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/RelativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">




      <TextView
            android:id="@+id/detailsCategoryView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_alignParentTop="true"
            android:text="@string/show_details"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"/>

        <TextView
            android:id="@+id/detailsCostView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@id/detailsProgressBar"
            android:layout_toStartOf="@id/detailsProgressBar"
            android:text="@string/item_cost"
            android:paddingTop="5dp"
            android:paddingBottom="5dp" />

        <ProgressBar
            android:id="@+id/detailsProgressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:progressDrawable="@drawable/gradient_progress"
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:layout_toLeftOf="@id/detailsPercentView"
            android:layout_toStartOf="@id/detailsPercentView"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_alignTop="@id/detailsPercentView"
            android:layout_alignBottom="@id/detailsPercentView"
            />

        <TextView
            android:id="@+id/detailsPercentView"
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="@string/percent" />-->


</RelativeLayout>